<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/bodyID"
        android:layout_gravity="center"
        android:src="@drawable/body"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eyesID"
        android:src="@drawable/eyes"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/browsID"
        android:src="@drawable/eyebrows"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/armsID"
        android:src="@drawable/arms"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/earsID"
        android:src="@drawable/ears"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glassesID"
        android:src="@drawable/glasses"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hatID"
        android:src="@drawable/hat"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mouthID"
        android:src="@drawable/mouth"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mustacheID"
        android:src="@drawable/mustache"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noseID"
        android:src="@drawable/nose"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoesID"
        android:src="@drawable/shoes"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/bodyID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/instruction"
        android:id="@+id/textView"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:rowCount="5"
        android:columnCount="2"
        android:layout_centerInParent="true"
        android:layout_below="@+id/bodyID"
        android:paddingTop="10dp"
        android:id="@+id/gridLayout">

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkArms"
            android:onClick="displayArms"
            android:text="arms"
            android:paddingRight="80dp"
            />

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkEars"
            android:onClick="displayEars"
            android:text="ears"/>

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkEyebrows"
            android:onClick="displayEyebrows"
            android:text="eyebrows"/>

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkEyes"
            android:onClick="displayEyes"
            android:text="eyes"/>

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkGlasses"
            android:onClick="displayGlasses"
            android:text="glasses"/>

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkHat"
            android:onClick="displayHat"
            android:text="hat"/>

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkMouth"
            android:onClick="displayMouth"
            android:text="mouth"/>

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkMustache"
            android:onClick="displayMustache"
            android:text="mustache"/>

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkNose"
            android:onClick="displayNose"
            android:text="nose"/>

        <CheckBox
            android:checked="false"
            android:clickable="true"
            android:id="@+id/checkShoes"
            android:onClick="displayShoes"
            android:text="shoes"/>

    </GridLayout>
</RelativeLayout>
